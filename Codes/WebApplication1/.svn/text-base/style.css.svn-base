body {
	border:0 none;
	font-size: 11px;
	font-family: tahoma, arial, verdana, sans-serif;
}

#header {
	width: 100%;
	height: 35px;
	text-indent: 30px;
	font-size: 20px;
	font-weight: bold;
	
}

#leftCol {
	float: left;
	width: 75%;
	display: block;
	position: relative;
}

#rightCol {
	float: left;
	width: 23%;
	margin-left: 10px;
}

#legend 
{
	background:transparent url(images/speed.png) repeat scroll 0 0;
	height: 85px;
	filter: alpha(opacity='70');
	opacity: 0.7;
	position:absolute;
	right: 0;
	top: 0;
	width: 120px;
	z-index: 10000;
}

.chart {
	width: 100%;
	margin-bottom: 5px;
	padding-bottom: 7px;
	border-bottom: 1px solid #AAA;
}

#menucontrols {
	width: 100%;
	margin-bottom: 5px;
	padding-bottom: 7px;
	border-bottom: 1px solid #AAA;
}

.valueBar {
	margin: 5px 0;
}

#menuitem1 {
	margin: 0px 0px 5px 0px;
	padding-bottom: 5px;
	border-bottom: 1px solid #AAA;
	font-size: 12px;
}

#speedLabel .label {
	font-weight: bold;
	padding-right: 5px;
	text-align: right;
	width: 50px;
}
#speedTableDiv 
{
	height: 200px;
	overflow: auto;	
}
#speedTable {
	width: 100%;
	border: 1px solid #AAA;
	text-align: center;
	margin-top: 5px;
}

.chartLabel {
	text-align: left;
	font-weight: bold;
	margin-bottom: 7px;
}

.selectArea {
	background: #DDD;
	border: 1px solid #BBB;
	position: absolute;
	z-index: 30;
}

#mouseonPopup {
	position: absolute;
	background: #FFF;
	height: 20px;
	border: 1px solid #000;
	padding: 5px;
	z-index: 5000;
	visibility: hidden;
}
.chartImg 
{
	margin-top: 5px;
}
/*****Mkrs style******/
.trafficMkr {
	width: 200px;
	height: 143px;
	overflow: hidden;
	display: block;
	margin-right: 10px;
}

.trafficMkr h5 {
	height: 20px;
	font-size: 13px;
	color: #063c65;
}

.trafficMkr h6 {
	height: 20px;
	font-size: 12px;
	color: #519bd4;
}

.trafficMkr h7 {
	height: 25px;
	line-height: 25px;
}

.trafficMkrTable {
	width: 100%;
	height: 80px;
	border: 1px solid #AAA;
}

.trafficMkrTable td {
	border: 1px dashed #BBB;
	text-align: center;
	width: 50px;
}

.trafficMkrTable .trafficMkrSpeed {
	font-weight: bold;
	font-size: 14px;
	color: #ffa200;
}